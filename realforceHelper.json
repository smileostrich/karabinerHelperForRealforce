{
  "title": "Fix Realforce R3 Media Keys to F1-F12",
  "rules": [
    {
      "description": "Remap media keys (display_brightness, volume, etc.) to F1-F12",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "consumer_key_code": "display_brightness_decrement",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "f1"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "consumer_key_code": "display_brightness_increment",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "f2"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "consumer_key_code": "scan_previous_track",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "f3"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "consumer_key_code": "play_or_pause",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "f4"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "consumer_key_code": "scan_next_track",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "f5"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "consumer_key_code": "mute",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "f6"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "consumer_key_code": "volume_decrement",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "f7"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "consumer_key_code": "volume_increment",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "f8"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "f9",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "f9"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "f10",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "f10"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "f11",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "f11"
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "f12",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "f12"
            }
          ]
        }
      ]
    }
  ]
}
